<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.minijean.healthmer.model.dao.EmailDao">

    <!-- 인증 토큰 삽입 -->
    <insert id="insertToken" parameterType="com.minijean.healthmer.model.dto.EmailVerificationToken">
        INSERT INTO email_verification_token (token, email)
        VALUES (#{token}, #{email})
    </insert>

    <!-- 토큰으로 검색 -->
    <select id="findByToken" parameterType="String" resultType="com.minijean.healthmer.model.dto.EmailVerificationToken">
        SELECT *
        FROM email_verification_token
        WHERE token = #{token}
    </select>

    <!-- 토큰 삭제 -->
    <delete id="deleteByToken" parameterType="String">
        DELETE FROM email_verification_token
        WHERE token = #{token}
    </delete>
    
</mapper>
